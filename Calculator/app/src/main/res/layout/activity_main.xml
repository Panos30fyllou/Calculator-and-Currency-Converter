<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/textViewOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/editTextInput"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/comfortaa_light"
        />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/comfortaa_light"
        android:gravity="right"
        android:inputType="number"
        android:text="0"
        android:textColor="@color/teal_200"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@color/teal_200"/>

    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="4"
            android:rowCount="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="7"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="8"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="9"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_Divide"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="operatorClicked"
            android:text="/"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="4"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="5"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="6"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_Multiply"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="operatorClicked"
            android:text="*"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="1"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="2"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="3"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_Add"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="operatorClicked"
            android:text="+"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_Clear"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="clearEverything"
            android:text="C"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="numClicked"
            android:text="0"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_Equals"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="showRes"
            android:text="="
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />

        <Button
            android:id="@+id/button_Subtract"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/teal_200"
            android:fontFamily="@font/comfortaa_light"
            android:onClick="operatorClicked"
            android:text="-"
            android:textSize="36sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200"
            app:layout_constraintDimensionRatio="1" />


        </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcornerbutton"
        android:fontFamily="@font/comfortaa_light"
        android:onClick="openConverter"
        android:text="Currency Converter"
        android:textStyle="bold"
        app:backgroundTint="@color/teal_200"
        app:icon="@drawable/ic_coin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>